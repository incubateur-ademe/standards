{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/config": [
        "../src/config.ts"
      ],
      "@/utils/*": [
        "../src/lib/utils/*"
      ],
      "@/prisma/*": [
        "../src/generated/prisma/*"
      ],
      "@/*": [
        "../src/*"
      ]
    },
  },
  "include": [
    "../global.d.ts",
    "../env.d.ts",
    "../types/**/*.d.ts",
    "../**/*.ts",
    "../**/*.cts",
    "../**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}